{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "Node",
		"target": "ES6",
		"skipLibCheck": true,
		"sourceMap": true,
		"outDir": "dist",
		"forceConsistentCasingInFileNames": true,
		"strict": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],

	"ts-node": {
		"swc": true
	}
}
